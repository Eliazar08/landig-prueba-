    <h2 class="text-3xl font-semibold text-center mb-10">Contáctanos</h2>
      <div class="grid md:grid-cols-2 gap-8">
        <form class="space-y-4">
          <input type="text" placeholder="Nombre" class="w-full border p-3 rounded mb-4" />
